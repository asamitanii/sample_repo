<div id="title">
	<div>
		<p><%= @article.created_at %></p>
		<h1><%= @article.title %></h1>
	</div>
</div>


<div id="article_wrap">

	<div id="content">

		<%= raw @article.text %>

	</div>

    <div id="sidebar">
        
        <h2>★PV数ランキング</h2>
        <ul>
        <% @popular_ids.each do |popular_id| %>
        	
            <li>
           <%= link_to Article.find(popular_id[0]).title, article_path(Article.find(popular_id[0]).id) %>
           <span>（<%= popular_id[1].to_i %>PV）</span>
 			</li>
        <% end %>
           
        </ul>
    </div>
    <div class="clear"></div>

</div>